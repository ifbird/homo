#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
# User: Set here the F90 compiler and options
#       Pedefined compilers: INTEL, PGF, HPUX, LAHEY
#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

#COMPILER = G95
#COMPILER = LAHEY
COMPILER = INTEL
#COMPILER = PGF
#COMPILER = HPUX
#COMPILER = GFORTRAN

FC_G95     = g95
FOPT_G95   = -cpp -O -pg -fbounds-check -fimplicit-none  -Wall -ftrace=full

FC_LAHEY   = lf95
# More aggressive for production runs:
#FOPT_LAHEY = -Cpp --pca -O
# More checking for debugging:
FOPT_LAHEY = -Cpp --chk a,e,s,u --pca --ap -O0 -g --trap --trace --chkglobal

FC_INTEL   = ifort 
# More aggressive for production runs:
#FOPT_INTEL = -cpp -O -fp-model precise -pc80 -prec_div
# More checking for debugging:
FOPT_INTEL = -cpp -O0 -fp-model strict -implicitnone -ftrapuv \
              -debug all -check all -warn all

FC_PGF     = pgf90
# More aggressive for production runs:
FOPT_PGF   = -Mpreprocess -O -fast -pc 80 -Kieee
# More checking for debugging:
#FOPT_PGF   = -Mpreprocess -O0 -Mbounds -Mchkfpstk -Mchkptr -Mchkstk \
#             -Ktrap=fp -pc 80 -Kieee

FC_HPUX    = f90
FOPT_HPUX  = -O -u +Oall +check=on

FC_GFORTRAN     = gfortran
FOPT_GFORTRAN   = -cpp -O

# define FULL_ALGEBRA for non-sparse integration
FC   = $(FC_$(COMPILER))
FOPT = $(FOPT_$(COMPILER)) # -DFULL_ALGEBRA

LIBS =
#LIBS = -llapack -lblas

# Command to create Matlab mex gateway routines 
# Note: use $(FC) as the mex Fortran compiler
MEX  = mex

GENSRC = chapman_Precision.f90  \
	 chapman_Parameters.f90     \
	 chapman_Global.f90  

GENOBJ = chapman_Precision.o    \
	 chapman_Parameters.o       \
	 chapman_Global.o     

FUNSRC = chapman_Function.f90 
FUNOBJ = chapman_Function.o 

JACSRC = chapman_JacobianSP.f90  chapman_Jacobian.f90
JACOBJ = chapman_JacobianSP.o    chapman_Jacobian.o

HESSRC = chapman_HessianSP.f90   chapman_Hessian.f90
HESOBJ = chapman_HessianSP.o     chapman_Hessian.o

STMSRC = chapman_StoichiomSP.f90 chapman_Stoichiom.f90 
STMOBJ = chapman_StoichiomSP.o   chapman_Stoichiom.o

UTLSRC = chapman_Rates.f90 chapman_Util.f90 chapman_Monitor.f90
UTLOBJ = chapman_Rates.o   chapman_Util.o   chapman_Monitor.o

LASRC  = chapman_LinearAlgebra.f90 
LAOBJ  = chapman_LinearAlgebra.o   

STOCHSRC = chapman_Stochastic.f90 
STOCHOBJ = chapman_Stochastic.o 

MAINSRC = chapman_Main.f90   chapman_Initialize.f90   chapman_Integrator.f90 chapman_Model.f90
MAINOBJ = chapman_Main.o     chapman_Initialize.o     chapman_Integrator.o   chapman_Model.o 

#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
# User: modify the line below to include only the
#       objects needed by your application
#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
ALLOBJ = $(GENOBJ) $(FUNOBJ) $(JACOBJ) $(HESOBJ) $(STMOBJ) \
	 $(UTLOBJ) $(LAOBJ)

#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
# User: modify the line below to include only the
#       executables needed by your application
#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
all:    exe

exe:	$(ALLOBJ) $(MAINOBJ) 
	$(FC) $(FOPT) $(ALLOBJ) $(MAINOBJ) $(LIBS) -o chapman.exe

stochastic:$(ALLOBJ) $(STOCHOBJ) $(MAINOBJ)
	$(FC) $(FOPT) $(ALLOBJ) $(STOCHOBJ) $(MAINOBJ) $(LIBS) \
	-o chapman_stochastic.exe

mex:    $(ALLOBJ)
	$(MEX) FC#$(FC) -fortran -O chapman_mex_Fun.f90     $(ALLOBJ)
	$(MEX) FC#$(FC) -fortran -O chapman_mex_Jac_SP.f90  $(ALLOBJ)
	$(MEX) FC#$(FC) -fortran -O chapman_mex_Hessian.f90 $(ALLOBJ)

clean:
	rm -f chapman*.o chapman*.mod \
	chapman*.dat chapman.exe chapman*.mexglx \
	chapman.map

distclean:
	rm -f chapman*.o chapman*.mod \
	chapman*.dat chapman.exe chapman.map \
	chapman*.f90 chapman_*.mexglx

chapman_Precision.o: chapman_Precision.f90 
	$(FC) $(FOPT) -c $<

chapman_Parameters.o: chapman_Parameters.f90 \
	            chapman_Precision.o
	$(FC) $(FOPT) -c $<

chapman_Monitor.o: chapman_Monitor.f90 \
	             chapman_Precision.o
	$(FC) $(FOPT) -c $<

chapman_Global.o: chapman_Global.f90 \
	            chapman_Parameters.o chapman_Precision.o
	$(FC) $(FOPT) -c $<

chapman_Initialize.o: chapman_Initialize.f90  $(GENOBJ) 
	$(FC) $(FOPT) -c $<

chapman_Function.o: chapman_Function.f90  $(GENOBJ) 
	$(FC) $(FOPT) -c $<

chapman_Stochastic.o: chapman_Stochastic.f90  $(GENOBJ) 
	$(FC) $(FOPT) -c $<

chapman_JacobianSP.o: chapman_JacobianSP.f90 $(GENOBJ)
	$(FC) $(FOPT) -c $<

chapman_Jacobian.o: chapman_Jacobian.f90  $(GENOBJ) chapman_JacobianSP.o
	$(FC) $(FOPT) -c $<

chapman_LinearAlgebra.o: chapman_LinearAlgebra.f90 $(GENOBJ) chapman_JacobianSP.o
	$(FC) $(FOPT) -c $<

chapman_Rates.o: chapman_Rates.f90  $(GENOBJ) 
	$(FC) $(FOPT) -c $<

chapman_HessianSP.o: chapman_HessianSP.f90  $(GENOBJ)
	$(FC) $(FOPT) -c $<

chapman_Hessian.o:  chapman_Hessian.f90 $(GENOBJ) chapman_HessianSP.o
	$(FC) $(FOPT) -c $<

chapman_StoichiomSP.o: chapman_StoichiomSP.f90 $(GENOBJ)
	$(FC) $(FOPT) -c $<

chapman_Stoichiom.o: chapman_Stoichiom.f90  $(GENOBJ) chapman_StoichiomSP.o
	$(FC) $(FOPT) -c $<

chapman_Util.o: chapman_Util.f90  $(GENOBJ) chapman_Monitor.o
	$(FC) $(FOPT) -c $<

chapman_Main.o: chapman_Main.f90  $(ALLOBJ) chapman_Initialize.o chapman_Model.o chapman_Integrator.o
	$(FC) $(FOPT) -c $<

chapman_Model.o: chapman_Model.f90  $(ALLOBJ) chapman_Integrator.o
	$(FC) $(FOPT) -c $<

chapman_Integrator.o: chapman_Integrator.f90  $(ALLOBJ)
	$(FC) $(FOPT) -c $<
