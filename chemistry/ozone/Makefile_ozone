#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
# User: Set here the F90 compiler and options
#       Pedefined compilers: INTEL, PGF, HPUX, LAHEY
#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

#COMPILER = G95
#COMPILER = LAHEY
#COMPILER = INTEL
#COMPILER = PGF
#COMPILER = HPUX
COMPILER = GFORTRAN

FC_G95     = g95
FOPT_G95   = -cpp -O -pg -fbounds-check -fimplicit-none  -Wall -ftrace=full

FC_LAHEY   = lf95
# More aggressive for production runs:
#FOPT_LAHEY = -Cpp --pca -O
# More checking for debugging:
FOPT_LAHEY = -Cpp --chk a,e,s,u --pca --ap -O0 -g --trap --trace --chkglobal

FC_INTEL   = ifort 
# More aggressive for production runs:
#FOPT_INTEL = -cpp -O -fp-model precise -pc80 -prec_div
# More checking for debugging:
FOPT_INTEL = -cpp -O0 -fp-model strict -implicitnone -ftrapuv \
              -debug all -check all -warn all

FC_PGF     = pgf90
# More aggressive for production runs:
FOPT_PGF   = -Mpreprocess -O -fast -pc 80 -Kieee
# More checking for debugging:
#FOPT_PGF   = -Mpreprocess -O0 -Mbounds -Mchkfpstk -Mchkptr -Mchkstk \
#             -Ktrap=fp -pc 80 -Kieee

FC_HPUX    = f90
FOPT_HPUX  = -O -u +Oall +check=on

FC_GFORTRAN     = gfortran
FOPT_GFORTRAN   = -cpp -O

# define FULL_ALGEBRA for non-sparse integration
FC   = $(FC_$(COMPILER))
FOPT = $(FOPT_$(COMPILER)) # -DFULL_ALGEBRA

LIBS =
#LIBS = -llapack -lblas

# Command to create Matlab mex gateway routines 
# Note: use $(FC) as the mex Fortran compiler
MEX  = mex

GENSRC = ozone_Precision.f90  \
	 ozone_Parameters.f90     \
	 ozone_Global.f90  

GENOBJ = ozone_Precision.o    \
	 ozone_Parameters.o       \
	 ozone_Global.o     

FUNSRC = ozone_Function.f90 
FUNOBJ = ozone_Function.o 

JACSRC = ozone_JacobianSP.f90  ozone_Jacobian.f90
JACOBJ = ozone_JacobianSP.o    ozone_Jacobian.o

HESSRC = ozone_HessianSP.f90   ozone_Hessian.f90
HESOBJ = ozone_HessianSP.o     ozone_Hessian.o

STMSRC = ozone_StoichiomSP.f90 ozone_Stoichiom.f90 
STMOBJ = ozone_StoichiomSP.o   ozone_Stoichiom.o

UTLSRC = ozone_Rates.f90 ozone_Util.f90 ozone_Monitor.f90
UTLOBJ = ozone_Rates.o   ozone_Util.o   ozone_Monitor.o

LASRC  = ozone_LinearAlgebra.f90 
LAOBJ  = ozone_LinearAlgebra.o   

STOCHSRC = ozone_Stochastic.f90 
STOCHOBJ = ozone_Stochastic.o 

MAINSRC = ozone_Main.f90   ozone_Initialize.f90   ozone_Integrator.f90 ozone_Model.f90
MAINOBJ = ozone_Main.o     ozone_Initialize.o     ozone_Integrator.o   ozone_Model.o 

#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
# User: modify the line below to include only the
#       objects needed by your application
#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
ALLOBJ = $(GENOBJ) $(FUNOBJ) $(JACOBJ) $(HESOBJ) $(STMOBJ) \
	 $(UTLOBJ) $(LAOBJ)

#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
# User: modify the line below to include only the
#       executables needed by your application
#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
all:    exe

exe:	$(ALLOBJ) $(MAINOBJ) 
	$(FC) $(FOPT) $(ALLOBJ) $(MAINOBJ) $(LIBS) -o ozone.exe

stochastic:$(ALLOBJ) $(STOCHOBJ) $(MAINOBJ)
	$(FC) $(FOPT) $(ALLOBJ) $(STOCHOBJ) $(MAINOBJ) $(LIBS) \
	-o ozone_stochastic.exe

mex:    $(ALLOBJ)
	$(MEX) FC#$(FC) -fortran -O ozone_mex_Fun.f90     $(ALLOBJ)
	$(MEX) FC#$(FC) -fortran -O ozone_mex_Jac_SP.f90  $(ALLOBJ)
	$(MEX) FC#$(FC) -fortran -O ozone_mex_Hessian.f90 $(ALLOBJ)

clean:
	rm -f ozone*.o ozone*.mod \
	ozone*.dat ozone.exe ozone*.mexglx \
	ozone.map

distclean:
	rm -f ozone*.o ozone*.mod \
	ozone*.dat ozone.exe ozone.map \
	ozone*.f90 ozone_*.mexglx

ozone_Precision.o: ozone_Precision.f90 
	$(FC) $(FOPT) -c $<

ozone_Parameters.o: ozone_Parameters.f90 \
	            ozone_Precision.o
	$(FC) $(FOPT) -c $<

ozone_Monitor.o: ozone_Monitor.f90 \
	             ozone_Precision.o
	$(FC) $(FOPT) -c $<

ozone_Global.o: ozone_Global.f90 \
	            ozone_Parameters.o ozone_Precision.o
	$(FC) $(FOPT) -c $<

ozone_Initialize.o: ozone_Initialize.f90  $(GENOBJ) 
	$(FC) $(FOPT) -c $<

ozone_Function.o: ozone_Function.f90  $(GENOBJ) 
	$(FC) $(FOPT) -c $<

ozone_Stochastic.o: ozone_Stochastic.f90  $(GENOBJ) 
	$(FC) $(FOPT) -c $<

ozone_JacobianSP.o: ozone_JacobianSP.f90 $(GENOBJ)
	$(FC) $(FOPT) -c $<

ozone_Jacobian.o: ozone_Jacobian.f90  $(GENOBJ) ozone_JacobianSP.o
	$(FC) $(FOPT) -c $<

ozone_LinearAlgebra.o: ozone_LinearAlgebra.f90 $(GENOBJ) ozone_JacobianSP.o
	$(FC) $(FOPT) -c $<

ozone_Rates.o: ozone_Rates.f90  $(GENOBJ) 
	$(FC) $(FOPT) -c $<

ozone_HessianSP.o: ozone_HessianSP.f90  $(GENOBJ)
	$(FC) $(FOPT) -c $<

ozone_Hessian.o:  ozone_Hessian.f90 $(GENOBJ) ozone_HessianSP.o
	$(FC) $(FOPT) -c $<

ozone_StoichiomSP.o: ozone_StoichiomSP.f90 $(GENOBJ)
	$(FC) $(FOPT) -c $<

ozone_Stoichiom.o: ozone_Stoichiom.f90  $(GENOBJ) ozone_StoichiomSP.o
	$(FC) $(FOPT) -c $<

ozone_Util.o: ozone_Util.f90  $(GENOBJ) ozone_Monitor.o
	$(FC) $(FOPT) -c $<

ozone_Main.o: ozone_Main.f90  $(ALLOBJ) ozone_Initialize.o ozone_Model.o ozone_Integrator.o
	$(FC) $(FOPT) -c $<

ozone_Model.o: ozone_Model.f90  $(ALLOBJ) ozone_Integrator.o
	$(FC) $(FOPT) -c $<

ozone_Integrator.o: ozone_Integrator.f90  $(ALLOBJ)
	$(FC) $(FOPT) -c $<
